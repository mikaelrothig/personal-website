---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '@fontsource-variable/inter';
import '../styles/tailwind.css';

import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

import { ViewTransitions } from "astro:transitions";
import Analytics from '@vercel/analytics/astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mikael RÃ¶thig is a Software Developer with a passion for crafting user-friendly experiences and bringing clean, visually appealing designs to life." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" sizes="32x32">
		<link rel="apple-touch-icon" href="/favicon.png"/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="bg-light-primary-darker dark:bg-primary-darker antialiased">
		<Nav />

		<main class="px-6 max-w-[600px] pt-16 md:pt-40 min-h-screen mx-auto space-y-12">
			<slot />

			<Footer />
		</main>
		<Analytics/>
	</body>
</html>