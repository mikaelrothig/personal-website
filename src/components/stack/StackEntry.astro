---
interface Props {
    href: string;
    heading: string;
    subheading: string;
}

const { href, heading, subheading} = Astro.props;
---

<a href={href} class="flex gap-x-4 items-center p-3 rounded-lg bg-light-primary dark:bg-primary md:hover:outline md:hover:outline-4 outline-light-primary-lighter dark:outline-primary-lighter" target="_blank">
    <slot />

    <div>
        <p class="text-light-text-primary dark:text-text-primary">{heading}</p>
        <p class="text-sm">{subheading}</p>
    </div>
</a>