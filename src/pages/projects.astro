---
import Layout from '../layouts/Layout.astro';
import ImageCard from "../components/ImageCard.astro";
import Tag from "../components/Tag.astro";

import terrainGeneratorImage from "../assets/images/projects/terrain-generator.webp"
import personalWebsiteImage from "../assets/images/projects/personal-website.webp"
---

<Layout title="Mikael RÃ¶thig | Projects">
    <div>
        <h1>Projects</h1>
        <p class="text-sm">
            Check out my side projects where I experiment with new technologies and explore my interests.
        </p>
    </div>

    <ImageCard
        href="https://github.com/MikaelRothig/TerrainGenerator"
        heading="Random Terrain Generator"
        subheading="Hexagon based random terrain generator created using Unity and Blender"
        image={terrainGeneratorImage.src}
        imageAlt="Random Terrain Generator image"
        tags
        newTab
    >
        <Tag label="C#"/>
        <Tag label="Unity"/>
        <Tag label="Blender"/>
    </ImageCard>

    <ImageCard
            href="https://github.com/MikaelRothig/PortfolioWebsite"
            heading="Personal Website"
            subheading="Portfolio website built with Astro and Tailwind"
            image={personalWebsiteImage.src}
            imageAlt="Personal Website image"
            tags
            newTab
    >
        <Tag label="Astro"/>
        <Tag label="Tailwind CSS"/>
        <Tag label="Figma"/>
    </ImageCard>
</Layout>