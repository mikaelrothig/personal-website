    </TechStack>

    <TechStack heading="Libraries & Frameworks">
        <StackEntry href="https://symfony.com/" heading="Symfony" subheading="PHP framework">
            <Symfony tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://www.shopware.com/" heading="Shopware" subheading="Ecommerce platform">
            <Shopware tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://sulu.io/" heading="Sulu" subheading="CMS">
            <Sulu tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://gohugo.io/" heading="Hugo" subheading="Static site generator">
            <Hugo tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://astro.build/" heading="Astro" subheading="Javascript framework">
            <AstroJS tailwindAttr=`${iconStyling}`/>
        </StackEntry>

        <StackEntry href="https://react.dev/" heading="React" subheading="Javascript framework">
