        <StackEntry href="https://stimulus.hotwired.dev/" heading="Stimulus JS" subheading="Javascript framework">
            <StimulusJS tailwindAttr=`${iconStyling}`/>
        </StackEntry>
    </TechStack>

    <TechStack heading="Tools & Software">
        <StackEntry href="https://git-scm.com/" heading="Git" subheading="Version control">
            <Git tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://github.com/" heading="Github" subheading="Version control">
            <Github tailwindAttr=`${iconStyling}`/>
        </StackEntry>
