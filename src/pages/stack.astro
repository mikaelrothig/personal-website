        <StackEntry href="https://www.adobe.com/products/photoshop.html" heading="Adobe Photoshop" subheading="Raster graphics editor">
            <AdobePhotoshop tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://unity.com/" heading="Unity" subheading="Game development">
            <Unity tailwindAttr=`${iconStyling}`/>
        </StackEntry>
        <StackEntry href="https://www.blender.org/" heading="Blender" subheading="3D modeling">
            <Blender tailwindAttr=`${iconStyling}`/>
        </StackEntry>
