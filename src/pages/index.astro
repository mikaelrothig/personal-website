---
import Layout from '../layouts/Layout.astro';
import Experience from "../components/Experience.astro";
import FeaturedProject from '../components/FeaturedProject.astro';
import Stack from "../components/stack/Stack.astro";
import ContactForm from "../components/ContactForm.astro";
import StackEntry from "../components/stack/StackEntry.astro";
import HTML from "../assets/logos/HTML.astro";
import TailwindCSS from "../assets/logos/TailwindCSS.astro";
import AstroJS from "../assets/logos/AstroJS.astro";
import CSharp from "../assets/logos/CSharp.astro";
import Sulu from "../assets/logos/Sulu.astro";
import Php from "../assets/logos/Php.astro";
import Header from "../components/Header.astro";
---

<Layout title="Mikael RÃ¶thig">
    <Header />

    <Experience />

    <FeaturedProject />

    <Stack heading="Technologies I've worked with" viewAllButton>
        <StackEntry href="https://www.php.net/" heading="PHP" subheading="General purpose">
            <Php tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://learn.microsoft.com/en-us/dotnet/csharp/" heading="C#" subheading="General purpose">
            <CSharp tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://astro.build/" heading="Astro" subheading="Javascript framework">
            <AstroJS tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://sulu.io/" heading="Sulu" subheading="CMS">
            <Sulu tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://developer.mozilla.org/en-US/docs/Web/HTML" heading="HTML" subheading="Standard markup">
            <HTML tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://tailwindcss.com/" heading="Tailwind CSS" subheading="CSS framework">
            <TailwindCSS tailwindAttr="w-12 h-12 p-2 rounded-md bg-light-primary-darker dark:bg-primary-darker"/>
        </StackEntry>
    </Stack>

    <ContactForm/>
</Layout>