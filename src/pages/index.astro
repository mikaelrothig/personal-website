---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Experience from "../components/Experience.astro";
import FeaturedProject from '../components/FeaturedProject.astro';
import Stack from "../components/stack/Stack.astro";
import ContactForm from "../components/ContactForm.astro";
import StackEntry from "../components/stack/StackEntry.astro";
import HTML from "../assets/logos/HTML.astro";
import TailwindCSS from "../assets/logos/TailwindCSS.astro";
import AstroJS from "../assets/logos/AstroJS.astro";
import CSharp from "../assets/logos/CSharp.astro";
import Sulu from "../assets/logos/Sulu.astro";
import Php from "../assets/logos/Php.astro";
import Envelope from "../assets/icons/Envelope.astro";
import MapPin from "../assets/icons/MapPin.astro";

import ProfilePic from "../assets/images/profile-pic.webp"
---

<Layout title="Mikael Röthig">
    <div>
        <div class="flex items-center gap-x-4 pb-4">
            <img class="hidden xs:flex rounded-full h-12 w-12 sm:h-14 sm:w-14 border-2 border-accent p-0.5" src={ProfilePic.src} alt="Profile picture" />

            <h1 class="font-bold pb-0">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-accent-hover">Howzit.</span> I'm Mikael Röthig.<br>
                <span class="text-text-secondary">Software Developer</span>
            </h1>
        </div>

        <p class="flex gap-x-1 items-center text-sm pb-8">
            <MapPin height="16" width="16" tailwindAttr="stroke-text-secondary"/>
            Enschede, Netherlands
        </p>

        <p class="text-sm pb-4">
            I build user-friendly websites and applications with a focus on clean code and visually appealing designs.
        </p>

        <div class="flex gap-x-2">
            <Button href="/about" label="About me" color="button-primary"/>

            <Button href="mailto:mrrothig@gmail.com" label="Send a mail" color="button-secondary">
                <Envelope height="16" width="16" tailwindAttr="fill-text-secondary"/>
            </Button>
        </div>
    </div>

    <Experience />

    <FeaturedProject />

    <Stack heading="Technologies I've worked with" viewAllButton>
        <StackEntry href="https://www.php.net/" heading="PHP" subheading="General purpose">
            <Php tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://learn.microsoft.com/en-us/dotnet/csharp/" heading="C#" subheading="General purpose">
            <CSharp tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://astro.build/" heading="Astro" subheading="Javascript framework">
            <AstroJS tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://sulu.io/" heading="Sulu" subheading="CMS">
            <Sulu tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://developer.mozilla.org/en-US/docs/Web/HTML" heading="HTML" subheading="Standard markup">
            <HTML tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
        <StackEntry href="https://tailwindcss.com/" heading="Tailwind CSS" subheading="CSS framework">
            <TailwindCSS tailwindAttr="w-12 h-12 p-2 rounded-md bg-primary-darker"/>
        </StackEntry>
    </Stack>

    <ContactForm/>
</Layout>